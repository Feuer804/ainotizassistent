<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CFBundleDevelopmentRegion</key>
	<string>de</string>
	<key>CFBundleDisplayName</key>
	<string>StatusBarApp</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>com.statusbar.app</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>StatusBarApp</string>
	<key>CFBundlePackageType</key>
	<string>APPL</string>
	<key>CFBundleShortVersionString</key>
	<string>1.0</string>
	<key>CFBundleVersion</key>
	<string>1</string>
	<key>LSMinimumSystemVersion</key>
	<string>$(MACOSX_DEPLOYMENT_TARGET)</string>
	<key>NSHumanReadableCopyright</key>
	<string>Copyright © 2025 StatusBarApp. Alle Rechte vorbehalten.</string>
	<key>NSMainNibFile</key>
	<string>MainMenu</string>
	<key>NSPrincipalClass</key>
	<string>NSApplication</string>
	
	<!-- Menüleisten-App spezifische Konfiguration -->
	<key>LSUIElement</key>
	<true/>
	
	<!-- App-Berechtigungen -->
	<key>NSAppleEventsUsageDescription</key>
	<string>Diese App benötigt Apple Events-Berechtigungen für erweiterte Funktionen.</string>
	
	<!-- App-Icon (optional) -->
	<key>CFBundleIconFile</key>
	<string>AppIcon</string>
	
	<!-- Dokumenttypen (falls erforderlich) -->
	<key>CFBundleDocumentTypes</key>
	<array>
		<dict>
			<key>CFBundleTypeExtensions</key>
			<array>
				<string>status</string>
			</array>
			<key>CFBundleTypeName</key>
			<string>StatusBarApp Status</string>
			<key>CFBundleTypeRole</key>
			<string>Editor</string>
		</dict>
	</array>
	
	<!-- Services-Menü (falls erforderlich) -->
	<key>NSServices</key>
	<array>
		<dict>
			<key>NSMenuItem</key>
			<dict>
				<key>default</key>
				<string>StatusBarApp Status öffnen</string>
			</dict>
			<key>NSMessage</key>
			<string>openStatusFile</string>
			<key>NSRequiredContext</key>
			<dict>
				<key>NSTextContext</key>
				<string>Selection</string>
			</dict>
		</dict>
	</array>
</dict>
</plist>